# Rub-a-dub-dub

pkgname=movserver
pkgver=20130206
pkgrel=1
pkgdesc="MovServer media library manager testing branch"
provides=('movserver')
conflicts=()
replaces=()
arch=('i686' 'x86_64')
url=""
license=('other')
depends=('python2' 'mysql' 'mysql-python' 'python2-pip' 'python-imaging')
makedepends=('git')

optdepends=()
sha256sums=('')

_gitname='Mov1s'
_gitbranch='v3-standalone'
_gitroot='git://github.com/Mov1s/MovServer.git'

build() {
	#Clone the MovServer code
	git clone -b $_gitbranch $_gitroot
	
	_installpath="${pkgdir}/usr/share/movserver"
	_gitpath="${srcdir}/MovServer/*"
	_binpath="${pkgdir}/usr/bin"

	install -d $_installpath
	cp -a $_gitpath $_installpath

	chmod 755 $_installpath/movserver

	install -d $_binpath
	ln -s /usr/share/movserver/movserver $_binpath/movserver

	#Install some python modules
	pip2 install tvdb_api
	pip2 install tmdb3
}
